/**index.wxss**/
page {
  background-color: rgb(238, 237, 237);
}
.lick {
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  border: 1px solid #ccc;
  text-align: center;
  position: absolute;
  right: 0;
  top: -50rpx;
}
.lick image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-top: 10rpx;
}
.lick text {
  display: block;
}
.card {
  position: absolute;
  width: 90rpx;
  height: 56rpx;
  top: -28rpx;
  left: 0;
  background-color: rgba(68, 68, 68,.4);
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  text-align: right;
}
.card image {
   width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.cards-index {
  padding: 80rpx 0;
  box-sizing: border-box;
  font-size: 28rpx;
}
.userinfo {
 padding: 0 40rpx;
 box-sizing: border-box;
 position: relative;
}
.cards {
  text-align: center;
  border: 1px solid #ccc;
  padding: 0 0 30rpx 0;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.userinfo-avatar {
  width: 400rpx;
  height: 400rpx;
  margin: 20rpx;
}

.userinfo-nickname {
  display: block;
  color: #aaa;
}

.title {
  padding: 20rpx;
  box-sizing: border-box;
 color:rgb(11, 95, 252);
 font-size: 28rpx;
 text-align: left;
}
.title text {
  color: #000;
  font-size: 28rpx;
  font-weight: 700;
}
.userInfo {
  box-shadow: 0 0 10rpx 0 rgb(11, 95, 252);
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  text-align: center;
  width: 98%;
  font-size: 26rpx;
  margin:20rpx auto;
}
.unfold {
  font-size: 26rpx;
  margin-bottom: 20rpx;
}
.phone-number {
  margin-bottom: 30rpx;
}
.phone image{
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #ccc;
  margin-right: 20rpx;
  vertical-align: middle;
}
.number text:nth-child(2){
  border: 1px solid rgb(11, 95, 252);
  color: rgb(11, 95, 252);
  font-size: 26rpx;
  margin-left: 20rpx;
}
.userInfo button {
  border: 1px solid rgb(11, 95, 252);
  background-color: #fff;
  color: rgb(11, 95, 252);
  display: inline-block;
  width: 310rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.share {
  margin-right: 20rpx;
}
.heaList {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.heaList image {
  width: 75rpx;
  height: 75rpx;
  margin: 20rpx 15rpx 0 0;
  border-radius: 10rpx;
}
.text {
  color:#000;
  margin-top: 10rpx;
}
.user-card {
  width: 500rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: rgb(11, 95, 252);
  margin: 40rpx auto;
  border-radius: 10rpx;
}
.card-list {
  height: 100vh;
  font-size: 28rpx;
  background-color: rgba(223, 242, 245,.2);
  padding: 20rpx;
  box-sizing: border-box;
}
.card-box {
  border: 1px solid #ccc;
  border-radius: 16rpx;
   padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.card-box image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  vertical-align: middle;
}
.card-name {
  font-size: 30rpx;
  flex-wrap: 700;
}
.card-phone {
  font-size: 26rpx;
  color: #ccc;
  margin-top: 20rpx;
}
.card-emil {
  font-size: 26rpx;
  color: #ccc;
  margin-bottom: 20rpx;
}
.card-rank {
  font-size: 26rpx;
  color: rgb(11, 95, 252);
}
.tools text {
  display: inline-block;
  border: 1px solid #ccc;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  margin-left: 20rpx;
}
.footer {
  text-align: center;
  margin-top: 20rpx;
}
